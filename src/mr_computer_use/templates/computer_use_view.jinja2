{% extends "base.jinja2" %}

{% block head_styles %}
<style>
  body {
    margin: 0;
    padding: 0;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }
  .container {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  header {
    background: #222;
    color: #fff;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  main {
    flex: 1;
    padding: 1rem;
  }
  .btn {
    background: #444;
    color: white;
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 4px;
    display: inline-block;
  }
  .btn:hover {
    background: #666;
  }
</style>
{% endblock %}

{% block head_scripts %}
<script type="module" src="/mr_computer_use/static/js/computer-use-viewer.js"></script>
{% endblock %}

{% block content %}
<div class="container">
  <header>
    <h1>MindRoot Computer Use - Virtual Desktop</h1>
    <div>
      <a href="/chat" class="btn">Back to Chat</a>
    </div>
  </header>
  
  <main>
    <computer-use-viewer></computer-use-viewer>
  </main>
</div>
{% endblock %}
